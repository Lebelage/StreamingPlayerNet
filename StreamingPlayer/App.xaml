<Application x:Class="StreamingPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StreamingPlayer"
             xmlns:viewmodels="clr-namespace:StreamingPlayer.ViewModels"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\ResourceDictionaries\ColorsDictionary.xaml"/>
                <ResourceDictionary Source="Resources\ResourceDictionaries\Commands.xaml"/>
                <ResourceDictionary Source="Resources\Styles\Buttons.xaml"/>
                <ResourceDictionary Source="Resources\Styles\TextBlocks.xaml"/>
                <ResourceDictionary Source="Resources\Styles\TextBoxes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <viewmodels:ViewModelLocator x:Key="VMLocator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
