<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region Common rounded button template-->
    <Style x:Key="button_CommonRounded" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource brush_MainBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource brush_MainForeground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource brush_ButtonDefaultBorder}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="MinHeight" Value="23"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" TextBlock.Foreground="{TemplateBinding Foreground}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}" Padding="3,0" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" Focusable="{TemplateBinding Focusable}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource brush_ButtonMouseOverBackground}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource brush_ButtonPressedBackground}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource brush_MainDisabledBackground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
    
    <!--#region Main "Close Window" button-->
    <Style x:Key="button_CloseWindowRactangle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource brush_MainBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource brush_MainForeground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="46"/>
        <Setter Property="FontSize" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}"  BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" SnapsToDevicePixels="True" Focusable="False">
                        <Path x:Name="cross" Data="M0,0 L1,1 Z M0,1 L1,0 Z" Stroke="{TemplateBinding Foreground}" StrokeThickness="1" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Width="{TemplateBinding FontSize}" Height="{TemplateBinding FontSize}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" Stretch="Uniform" Focusable="False"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource brush_Red}"/>
                            <Setter Property="Stroke" TargetName="cross" Value="{StaticResource brush_White}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource brush_DarkRed}"/>
                            <Setter Property="Stroke" TargetName="cross" Value="{StaticResource brush_MainDisabledForeground}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource brush_MainDisabledBackground}"/>
                            <Setter Property="Stroke" TargetName="cross" Value="{StaticResource brush_MainDisabledForeground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

